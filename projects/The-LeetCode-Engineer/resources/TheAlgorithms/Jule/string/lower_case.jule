/*
This function, converts all uppercase characters in a string to lowercase.
*/

/*
LowerCase("FooBar")
"foobar"

LowerCase("Foo 123")
"foo 123"
*/

fn LowerCase(mut s: str): str {
    let mut b = []byte(s)
    for i, c in b {
        if c >= 'A' && c <= 'Z' {
            b[i] = 'z' - ('Z' - c)
        }
    }
    ret str(b)
}